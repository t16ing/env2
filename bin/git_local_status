#!/bin/bash

find ~ -type d -name ".git" 2>/dev/null | grep -v "$HOME/.vim" | grep -v "$HOME/.oh-my-zsh/" | grep -v "$HOME/.local/" | while read dir ; do sh -c "cd $dir/../ && echo \"(git)${dir//\.git/}\" && git status -s && [ \"\$(git rev-list --count @{upstream}..HEAD)\" -gt \"0\" ] && echo \"\e[31m***not yet PUSH***\e[0m\" ; [ \"\$(git rev-list --count HEAD..@{upstream})\" -gt \"0\" ] && echo \"\e[31m***PULL required***\e[0m\"" 2>/dev/null ; done
